{
    "name": "ai-boilerplate",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": ">=24.0.0"
    },
    "scripts": {
        "postinstall": "node scripts/link-skills.js",
        "prepare": "husky",
        "dev": "next dev --turbopack --port 3003",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "test:e2e": "playwright test",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug",
        "test:watch": "jest --watch",
        "lint:all": "next lint && tsc --noEmit",
        "pre-commit": "npm run lint:all && npm run test",
        "setup": "./scripts/setup-all.sh",
        "setup:gh": "./scripts/setup-github-cli.sh",
        "check": "./scripts/check-prerequisites.sh",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:branch:create": "neonctl branches create --project-id $NEON_PROJECT_ID --name",
        "db:branch:list": "neonctl branches list --project-id $NEON_PROJECT_ID",
        "db:branch:delete": "neonctl branches delete --project-id $NEON_PROJECT_ID",
        "db:branch:info": "neonctl branches get --project-id $NEON_PROJECT_ID",
        "scratch:clean": "find .scratch -type f -name '*.ts' -o -name '*.js' -o -name '*.tsx' -o -name '*.jsx' | xargs rm -f 2>/dev/null; true"
    },
    "dependencies": {
        "@ai-sdk/openai": "^2.0.94",
        "@clerk/nextjs": "^6.38.2",
        "@neondatabase/serverless": "^1.0.2",
        "@radix-ui/themes": "^3.3.0",
        "ai": "^5.0.139",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "drizzle-kit": "^0.31.9",
        "drizzle-orm": "^0.44.7",
        "drizzle-zod": "^0.8.3",
        "lucide-react": "^0.575.0",
        "next": "15.5.12",
        "next-themes": "^0.4.6",
        "react": "19.2.4",
        "react-dom": "19.2.4",
        "sonner": "^2.0.7",
        "tailwind-merge": "^3.5.0",
        "uuid": "^11.1.0",
        "ws": "^8.19.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.4",
        "@playwright/test": "^1.58.2",
        "@tailwindcss/postcss": "^4.2.1",
        "@types/node": "^20.19.34",
        "@types/react": "^19.2.14",
        "@types/react-dom": "^19.2.3",
        "@types/uuid": "^11.0.0",
        "@types/ws": "^8.18.1",
        "dotenv": "^17.3.1",
        "eslint": "^9.39.3",
        "eslint-config-next": "15.5.12",
        "tailwindcss": "^4.2.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.56.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "secretlint": "^9.3.3",
        "@secretlint/secretlint-rule-preset-recommend": "^9.3.3"
    },
    "lint-staged": {
        "*.{ts,tsx}": ["eslint --fix"]
    }
}
